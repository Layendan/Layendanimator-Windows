<NavigationWindow x:Class="Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Windows"
        mc:Ignorable="d"
        Title="Layendanimator"
        Height="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
        Width="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        SnapsToDevicePixels="True"
        MinWidth="800"
        MinHeight="450"
        ScrollViewer.VerticalScrollBarVisibility="Auto"
        UseLayoutRounding="True"
        ScrollViewer.CanContentScroll="True"
        ShowsNavigationUI="False"
        Background="#FF2F3136"
        Foreground="White"
        KeyDown="NavigationWindow_KeyDown"
        Closed="NavigationWindow_Closed" 
        StateChanged="NavigationWindow_StateChanged"/>
